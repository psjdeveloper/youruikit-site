---
export interface Props {
  title?: string;
}
const { title = "youruikit Docs" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title} • Vyoma Labs</title>

  <link rel="stylesheet" href="/src/styles/global.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  <link rel="shortcut icon" href="favicon.ico" type="">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar is-light">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <strong>youruikit</strong>
      </a>
    </div>
    <div class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="/docs">Docs</a>
        <a class="navbar-item" href="https://www.npmjs.com/package/youruikit">npm</a>
        <a class="navbar-item" href="https://github.com/psjdeveloper/youruikit">GitHub</a>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <section class="section">
    <div class="container">
      <slot />
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="content has-text-centered">
      <p>
        © Vyoma Labs — youruikit
      </p>
    </div>
  </footer>

</body>
</html>
